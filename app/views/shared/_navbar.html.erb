<div class="navbar-home" data-controller="hover">
  <%= link_to root_path(language: @language) do %>
    <%= image_tag "logo.png", class: "logo",
      data: {action: "mouseover->hover#color mouseout->hover#decolor",
      color: "#{image_path "logo_animated_en.png"}", 
      bw: "#{image_path "logo.png"}"}  %>
  <% end %>

  <div class="navbar-menu">
    <div class="navbar-menu-items">
      <%= link_to illustrations_path(language: @language) do %>
        <%= image_tag "menu_#{@language}/illustrations_#{@language}_#{current_page?(illustrations_path) ? "col" : "bw"}.png", class: "navbar-item navbar-illustration", id: "#{current_page?(illustrations_path) ? "disable-hover" : ""}",
          data: {action: "#{current_page?(illustrations_path) ? "" : "mouseover->hover#color mouseout->hover#decolor"}",
          color: "#{image_path "menu_#{@language}/illustrations_#{@language}_col.png"}", 
          bw: "#{image_path "menu_#{@language}/illustrations_#{@language}_bw.png"}"} %>
      <% end %>

      <%= link_to about_path(language: @language) do %>
        <%= image_tag "menu_#{@language}/about_#{@language}_#{current_page?(about_path) ? "col" : "bw"}.png", class: "navbar-item", id: "#{current_page?(about_path) ? "disable-hover" : ""}",
            data: {action: "#{current_page?(about_path) ? "" : "mouseover->hover#color mouseout->hover#decolor"}",
            color: "#{image_path "menu_#{@language}/about_#{@language}_col.png"}", 
            bw: "#{image_path "menu_#{@language}/about_#{@language}_bw.png"}"} %>
      <% end %>

      <%= link_to books_path(language: @language) do %>
        <%= image_tag "menu_#{@language}/books_#{@language}_#{current_page?(books_path) ? "col" : "bw"}.png", class: "navbar-item", id: "#{current_page?(books_path) ? "disable-hover" : ""}",
            data: {action: "#{current_page?(books_path) ? "" : "mouseover->hover#color mouseout->hover#decolor"}",
            color: "#{image_path "menu_#{@language}/books_#{@language}_col.png"}", 
            bw: "#{image_path "menu_#{@language}/books_#{@language}_bw.png"}"} %>
      <% end %>

    </div>
      
    <div class="navbar-icons">
      <%= image_tag "icons/star.png", class: "navbar-star" %>

      <%= link_to "https://www.instagram.com/camillustrate", target: "_blank" do %>
        <%= image_tag "icons/instagram_bw.png", class: "navbar-icon", data: {action: "mouseover->hover#color mouseout->hover#decolor",
        color: "#{image_path "icons/instagram_col.png"}", 
        bw: "#{image_path "icons/instagram_bw.png"}"} %>
      <% end %>

      <%= image_tag "icons/star.png", class: "navbar-star" %>

      <%= mail_to "cmodena95@gmail.com" do %>
        <%= image_tag "icons/email_bw.png", class: "navbar-icon", data: {action: "mouseover->hover#color mouseout->hover#decolor",
        color: "#{image_path "icons/email_col.png"}", 
        bw: "#{image_path "icons/email_bw.png"}"} %>
      <% end %>

      <%= image_tag "icons/star.png", class: "navbar-star" %>
    </div>
  </div>
</div>