      <%= image_tag "illustrations/arrow_bw.png", class: "book-arrow", id: "right", data: {action: "mouseover->hover#color mouseout->hover#decolor click->book#forwardSchool",
      color: "#{image_path "illustrations/arrow_col.png"}", 
      bw: "#{image_path "illustrations/arrow_bw.png"}",
