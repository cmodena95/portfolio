<div data-controller="parallax">
  <div class="banner" data-action="scroll@window->parallax#move">
    <%= image_tag "mountain.png", class: "mountain", data: {parallax_target: "mountain"} %>
    <div class="banner-bg">
      <%= image_tag "sun.png", class: "sun", data: {parallax_target: "sun"} %>

      <%#= image_tag "shark.png", class: "shark", data: {parallax_target: "shark"} %>
      <%= image_tag "tree.png", class: "tree", data: {parallax_target: "tree"} %>
      <%= image_tag "houses.png", class: "houses", data: {parallax_target: "houses"} %>
    </div>
  </div>

  <div class="home">
    <div class="home-objects-left">
      <%= image_tag "home_objects/guava.png", class: "guava", data: {parallax_target: "guava"} %>
      <%= image_tag "home_objects/pizza.png", class: "pizza", data: {parallax_target: "pizza"} %>
    </div>

    <div class="home-menu" data-controller="hover">
      <div style="display: flex; align-items: center;">
        <%= image_tag "icons/star.png", class: "footer-star" %>
        <%= link_to illustrations_path(language: @language) do %>
          <%= image_tag "menu_#{@language}/illustrations_#{@language}_bw.png", class: "home-illustrations menu-item", data: {
            action: "mouseover->hover#color mouseout->hover#decolor",
            color: "#{image_path "menu_#{@language}/illustrations_#{@language}_col.png"}",
            bw: "#{image_path "menu_#{@language}/illustrations_#{@language}_bw.png"}"} %>
        <% end %>
        <%= image_tag "icons/star.png", class: "footer-star" %>
      </div>


      <div class="home-menu-level-2<%= @language == "en"  ? "" : "-es-pt" %>" style="display: flex; align-items: center;">
      <%= image_tag "icons/star.png", class: "footer-star" %>

        <%= link_to books_path(language: @language) do %>
          <%= image_tag "menu_#{@language}/books_#{@language}_bw.png", class: "menu-item home-books", data: {
            action: "mouseover->hover#color mouseout->hover#decolor",
            color: "#{image_path "menu_#{@language}/books_#{@language}_col.png"}",
            bw: "#{image_path "menu_#{@language}/books_#{@language}_bw.png"}"} %>
        <% end %>

        <%= image_tag "icons/star.png", class: "footer-star" %>

        <%= link_to about_path(language: @language) do %>
          <%= image_tag "menu_#{@language}/about_#{@language}_bw.png", class: "menu-item home-about", data: {action: "mouseover->hover#color mouseout->hover#decolor",
          color: "#{image_path "menu_#{@language}/about_#{@language}_col.png"}",
          bw: "#{image_path "menu_#{@language}/about_#{@language}_bw.png"}"} %>
        <% end %>

        <%= image_tag "icons/star.png", class: "footer-star" %>
      </div>

      <div style="display: flex; align-items: center;">
        <%= image_tag "icons/star.png", class: "footer-star" %>
        <%= mail_to "cmodena95@gmail.com" do %>
          <%= image_tag "menu_#{@language}/contact_#{@language}_bw.png", class: "menu-item #{@language == "en" ? "home-contact-en" : "home-contact"}", data: {action: "mouseover->hover#color mouseout->hover#decolor",
          color: "#{image_path "menu_#{@language}/contact_#{@language}_col.png"}", 
          bw: "#{image_path "menu_#{@language}/contact_#{@language}_bw.png"}"} %>
        <% end %>
        <%= image_tag "icons/star.png", class: "footer-star" %>
      </div>
    </div>

    <div class="home-objects-right">
      <%= image_tag "home_objects/sushi.png", class: "sushi", data: {parallax_target: "sushi"} %>
      <%= image_tag "home_objects/statue.png", class: "statue", data: {parallax_target: "statue"} %>
      <%= image_tag "home_objects/swan.png", class: "swan", data: {parallax_target: "swan"} %>
    </div>
  </div>
</div>


<%# footer %>
<div class="footer" data-controller="hover">
  <div class="footer-icons">
    <%= image_tag "icons/star.png", class: "footer-star" %>

    <%= link_to "https://www.instagram.com/camillustrate", target: "_blank" do %>
      <%= image_tag "icons/instagram_bw.png", class: "footer-icon", data: {action: "mouseover->hover#color mouseout->hover#decolor",
      color: "#{image_path "icons/instagram_col.png"}", 
      bw: "#{image_path "icons/instagram_bw.png"}"} %>
    <% end %>

    <%= image_tag "icons/star.png", class: "footer-star" %>

    <%= mail_to "cmodena95@gmail.com" do %>
      <%= image_tag "icons/email_bw.png", class: "footer-icon", data: {action: "mouseover->hover#color mouseout->hover#decolor",
      color: "#{image_path "icons/email_col.png"}", 
      bw: "#{image_path "icons/email_bw.png"}"} %>
    <% end %>

    <%= image_tag "icons/star.png", class: "footer-star" %>
  </div>
</div>